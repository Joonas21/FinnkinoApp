<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020202">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="192dp"
        android:layout_height="34dp"
        android:text="Rate the movie"
        android:textColor="#F8F8F8"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="369dp" />

    <Button
        android:id="@+id/rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:text="Rate"
        android:textColor="#000000"
        android:textColorHint="#FFEB3B"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="667dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:progressBackgroundTint="#514F4F"
        android:progressTint="#FFEB3B"
        android:rating="0"
        android:stepSize="1"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="473dp" />

    <EditText
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/rounded_borders"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nickname"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="426dp" />

    <EditText
        android:id="@+id/dateofrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/rounded_borders"
        android:ems="10"
        android:hint="Päivämäärä"
        android:inputType="date"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="584dp" />

    <EditText
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/rounded_borders"
        android:ems="10"
        android:hint="Text"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="625dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="106dp"
        android:layout_height="26dp"
        android:text="Optional"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="545dp" />

    <ListView
        android:id="@+id/reviews"
        android:layout_width="387dp"
        android:layout_height="224dp"
        android:background="@layout/rounded_borders"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/movie"
        android:layout_width="377dp"
        android:layout_height="64dp"
        android:text="Name of the rated movie"
        android:textColor="#CC9C0D"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:textSize="34sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What other people tought"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="88dp" />
</androidx.constraintlayout.widget.ConstraintLayout>